{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./{{srcDirRoot}}/*"],
      "quick": ["./.quick"],
      "quick/*": ["./.quick/*"]
    }
  },
  "include": ["**/*.tsx", "**/*.ts", "**/*.d.ts", "**/.*/*.d.ts"]
}